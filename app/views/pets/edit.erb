<h1>Update Pet</h1>

<label>Name:</label>

  <br>

<form action="/pets/<%=@pet.id%>" method="post">

  <input id="pet_name" type="text" name="pet[name]" value="<%@pet.name%>">

  <br><br>

  <label>Select an existing owner:</label>

  <br>

    <%@owners.each do |owner|%>
    <input id="<%=owner.id%>" type="radio" name="pet[owner_id]" value="<%=owner.id%>" <%="checked" if @pet.owner.name == owner.name%>><%= owner.name %></input>
    <%end%>

  <br><br>

  <label>Or create a new owner:</label>

  <br>

  <input id="owner_name" type="text" name="owner[name]">

  <br><br>

<input type="submit" value="Update Pet">

</form>
